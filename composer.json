{
    "name": "epscavalcante/epsc-shopping",
    "description": "PHP Project",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Eduardo Cavalcante",
            "email": "eduardo.ps.cavalcante@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Src\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "robmorgan/phinx": "^0.16.8",
        "ramsey/uuid": "^4.7",
        "monolog/monolog": "^3.9",
        "psr/http-client": "^1.0",
        "psr/log": "^3.0",
        "guzzlehttp/guzzle": "^7.9",
        "slim/slim": "^4.14",
        "slim/psr7": "^1.7",
        "php-di/php-di": "^7.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.8",
        "symfony/var-dumper": "^7.2",
        "mockery/mockery": "^1.6"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "serve": "php -S 0.0.0.0:80 ./public/index.php",
        "test": "./vendor/bin/pest",
        "test:coverage": "./vendor/bin/pest --coverage",
        "database": "./vendor/bin/phinx"
    }    
}
